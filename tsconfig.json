{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode"
    ],
    "compilerOptions": {
        "target": "ES2023",
        "lib": [
            "ES2023"
        ],
        "module": "ESNext",
        "rootDir": "src",
        "moduleResolution": "Node10",
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "resolveJsonModule": true,
        "inlineSourceMap": true,
        "outDir": "dist",
        "sourceRoot": "src",
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    }
}